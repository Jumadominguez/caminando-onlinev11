# Configuración de Base de Datos - Caminando Online V4
# Arquitectura Multi-Database con 8 bases de datos separadas

# ============================================================================
# 1. BASES DE ADMINISTRACIÓN Y OPERACIONES
# ============================================================================

# Base admin - Usuarios, sesiones y carritos
MONGO_ADMIN_URI=mongodb://localhost:27017/admin

# Base operations_db - Pedidos, logs y configuraciones del sistema
MONGO_OPERATIONS_URI=mongodb://localhost:27017/operations_db

# ============================================================================
# 2. BASE PROCESADA (FRONTEND)
# ============================================================================

# Base caminando_online_db - Datos normalizados para frontend
MONGO_PROCESSED_URI=mongodb://localhost:27017/caminando_online_db

# ============================================================================
# 3. BASES RAW (SCRAPING POR SUPERMERCADO)
# ============================================================================

# Base carrefour - Datos crudos de Carrefour
MONGO_CARREFOUR_URI=mongodb://localhost:27017/carrefour

# Base dia - Datos crudos de Dia
MONGO_DIA_URI=mongodb://localhost:27017/dia

# Base jumbo - Datos crudos de Jumbo
MONGO_JUMBO_URI=mongodb://localhost:27017/jumbo

# Base vea - Datos crudos de Vea
MONGO_VEA_URI=mongodb://localhost:27017/vea

# Base disco - Datos crudos de Disco
MONGO_DISCO_URI=mongodb://localhost:27017/disco

# ============================================================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================================================

# Puerto del servidor backend
PORT=5000

# ============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# ============================================================================

# JWT Secret para autenticación
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Bcrypt rounds para hashing de contraseñas
BCRYPT_ROUNDS=12

# ============================================================================
# CONFIGURACIÓN DE SCRAPING
# ============================================================================

# Intervalos de scraping (en minutos)
SCRAPE_INTERVAL_DIURNO=240    # 4 horas diurno
SCRAPE_INTERVAL_NOCTURNO=480  # 8 horas nocturno

# Timeout para requests de scraping (en segundos)
SCRAPE_TIMEOUT=30

# User agents para scraping
SCRAPE_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# ============================================================================
# CONFIGURACIÓN DE LOGS Y MONITOREO
# ============================================================================

# Nivel de logging (error, warn, info, debug)
LOG_LEVEL=info

# Archivo de logs del sistema
LOG_FILE=logs/app.log

# ============================================================================
# CONFIGURACIÓN DE CACHE Y PERFORMANCE
# ============================================================================

# TTL del cache de productos (en segundos)
CACHE_PRODUCTS_TTL=3600  # 1 hora

# TTL del cache de categorías (en segundos)
CACHE_CATEGORIES_TTL=7200  # 2 horas

# ============================================================================
# CONFIGURACIÓN DE BACKUP
# ============================================================================

# Directorio de backups
BACKUP_DIR=backups/

# Frecuencia de backup automático (en horas)
BACKUP_FREQUENCY=24

# Retención de backups (en días)
BACKUP_RETENTION=30